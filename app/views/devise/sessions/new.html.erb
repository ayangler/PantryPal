<body>
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card rounded-3">
          <%= image_tag("orangeorange.webp", class: 'd-block w-100 img-fluid', style: "border-top-left-radius: .3rem; border-top-right-radius: .3rem;") %>
          <div class="card-body p-4 p-md-5">
            <%# Start of log in details %>
            <h3>Log in</h3>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {novalidate:true, class:"needs-validation", method: :post }) do |f| %>
              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, :class => 'form-control', autofocus: true, required: true, autocomplete: "email" %>
                <div class="invalid-feedback">
                  Please enter your email.
                </div>
              </div>
              <div class="field">
                <%= f.label :password %><br />
                <%= f.password_field :password, :class => 'form-control', required: true, autocomplete: "current-password" %>
                <div class="invalid-feedback">
                  Please enter your email.
                </div>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
              <div class="actions">
                <%= f.submit "Log in", :class => 'btn btn-primary btn-block'%>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
            <%# End of log in details %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
