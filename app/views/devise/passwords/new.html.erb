<h2>Forgot your password?</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-md-5">
      <%= f.email_field :email, placeholder: "Enter email", autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
    <br/>
    <div class="actions">
      <%= f.submit "Send reset instructions", class:"btn btn-secondary" %>
    </div>
  <% end %>
