<div class="toast" style="position: absolute; top: 0; right: 0;" data-autohide="false">
  <div class="toast-header">
    <strong class="mr-auto">Welcome to PantryPal, <%= current_user.name%></strong>
    <%# <small>11 mins ago</small> %>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body">
    Please setup your inventory.
  </div>
</div>
<h1>Getting Started</h1>
<%= render 'form', food_inventory: @food_inventory %>
<script>
  $('.toast').toast('show');
</script>
