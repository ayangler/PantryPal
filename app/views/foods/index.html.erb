<head>
  <title> Foods</title>
</head>
<body>
  <h1>üçé Foods</h1>
  <table id="foodTable" class="table datatable table-hover table-striped" cellspacing="0" style="width:100%">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.name %></td>
          <td><%= food.type %></td>
          <td><%= link_to 'Show', food.becomes(Food) %></td>
          <!-- <td><%= link_to 'Edit', edit_food_path(food) %></td> -->
          <!--  <td><%= link_to 'Destroy', food.becomes(Food), method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
        </tr>
      <% end %>
    </tbody>
  </table>
</body>
